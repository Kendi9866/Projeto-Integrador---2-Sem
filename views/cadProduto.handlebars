<form method="post" action="/cadastrarProd">
    <label for="inputNome">Nome:</label>
    <input type="text" name="nome" id="nome">
    <label for="inputDescricao">Descrição:</label>
    <input type="text" name="descricao" id="desc">
    <label for="inputValor">Valor:</label>
    <input type="number" min="0" max="100" step=".01" name="valor" id="valor">
    <label for="inputColecao">Coleção:</label>
    <input type="text" name="colecao" id="colecao">

    <button type="submit">Cadastrar</button>
</form>